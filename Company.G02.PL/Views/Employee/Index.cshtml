
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>

<br />
<br />

<a asp-action="Create"  class="btn btn-primary">Create Employee</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E=>E.HiringDate )</th>
                <th>@Html.DisplayNameFor(E=>E.CreateAt )</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model) 
            {
                <tr>
                    <td>@items.Name</td>
                    <td>@items.Age</td>
                    <td>@items.Email</td>
                    <td>@items.Address</td>
                    <td>@items.Phone</td>
                    <td>@items.Salary</td>
                    <td>@items.IsActive</td>
                    <td>@items.IsDelete</td>
                    <td>@items.HiringDate</td>
                    <td>@items.CreateAt</td>
                    <partial name="_ButtonPartialView" model="@items.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else {
    <div class="mt-4 alert alert-success">
        <h4>
            There are no Employee :(
        </h4>
    </div>
}
